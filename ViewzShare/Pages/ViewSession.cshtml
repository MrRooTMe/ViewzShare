@page
@model ViewSessionModel
@using System
@using System.Collections.Generic
@using System.Linq
@using System.Text.Json
@using System.Text.Json.Serialization

@functions {
    private static string NormalizeGalleryCategory(GalleryAsset asset)
    {
        if (asset is null) return "Interior";
        var category = asset.Category?.Trim();
        if (string.IsNullOrWhiteSpace(category)) return "Interior";
        if (category.Equals("Exterior", StringComparison.OrdinalIgnoreCase)) return "Exterior";
        if (category.Equals("Public", StringComparison.OrdinalIgnoreCase)) return "Public";
        return "Interior";
    }

    private static string GetCategoryLabel(string category) => category switch
    {
        "Exterior" => "חוץ",
        "Public" => "שטחים משותפים",
        _ => "פנים"
    };
}
@{
    Layout = null;
    ViewData["Title"] = Model.Title;
}

<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>@Model.Title</title>
    
    <!-- Design System & Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;700&family=Rubik:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/view-session.css" asp-append-version="true" />
    
    <!-- Swiper.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
</head>
<body>
    <!-- Project Logo -->
    <img src="@Model.LogoUrl" alt="Project Logo" class="project-logo" onerror="this.style.display='none'" />

    @{
        var likedItems = Model.Session?.Items ?? new List<ApartmentItem>();
        var likedItemsWithImages = likedItems.Where(item => !string.IsNullOrWhiteSpace(item.PlanImageUrl)).ToList();
        var configuredGalleryAssets = Model.Session?.GalleryAssets ?? new List<GalleryAsset>();
        var hasConfiguredGallery = configuredGalleryAssets.Any();
        
        List<GalleryAsset> galleryAssets = hasConfiguredGallery 
            ? configuredGalleryAssets 
            : likedItemsWithImages.Select(item => new GalleryAsset { ImageUrl = item.PlanImageUrl, Category = "Interior" }).ToList();

        var galleryItems = galleryAssets
            .Select(asset => new { Asset = asset, Category = NormalizeGalleryCategory(asset) })
            .Where(x => !string.IsNullOrWhiteSpace(x.Asset?.ImageUrl))
            .ToList();

        var galleryCategories = new List<(string Id, string Label)>
        {
            ("Interior", "פנים"),
            ("Exterior", "חוץ"),
            ("Public", "שטחים משותפים")
        };

        var groupedGallery = galleryItems
            .GroupBy(item => item.Category)
            .ToDictionary(
                g => g.Key,
                g => g.Select(item => new { img = item.Asset!.ImageUrl, caption = GetCategoryLabel(item.Category) }).ToList()
            );

        var galleryJson = JsonSerializer.Serialize(groupedGallery, new JsonSerializerOptions
        {
            Encoder = System.Text.Encodings.Web.JavaScriptEncoder.UnsafeRelaxedJsonEscaping,
            DefaultIgnoreCondition = JsonIgnoreCondition.WhenWritingNull
        });
    }

    <!-- Floating Navigation -->
    <div class="nav-arrows">
        <button class="arrow-btn" id="prevBtn" aria-label="Previous Section">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"><polyline points="18 15 12 9 6 15"></polyline></svg>
        </button>
        <button class="arrow-btn" id="nextBtn" aria-label="Next Section">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
        </button>
    </div>

    <div class="snap-container" id="mainScroller">
        
        <!-- SECTION 1: Hero Movie -->
        <section class="section hero-section" id="sec1">
            <video class="hero-video" src="@Model.MovieUrl" autoplay muted loop playsinline></video>
            <div class="hero-content fade-in">
                <h1 class="hero-title">@Model.Session.ProjectId</h1>
                <p style="font-size: 20px; color: rgba(255,255,255,0.8);">חוויה אימרסיבית</p>
            </div>
        </section>

        <!-- SECTION 2: 3D Splatter -->
        <section class="section splatter-section" id="sec2">
            @if (!string.IsNullOrWhiteSpace(Model.SplatterUrl))
            {
                <div class="splatter-container">
                    <iframe class="splatter-frame" src="@Model.SplatterUrl" allow="fullscreen; xr-spatial-tracking; gyroscope; accelerometer"></iframe>
                    <div class="splatter-overlay" id="splatterOverlay">
                        <div class="interaction-prompt" onclick="enableSplatter()">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/></svg>
                            <span>לחץ לאינטראקציה בתלת מימד</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="hero-content">
                    <h2>סיור תלת מימד לא זמין</h2>
                    <p>אנא ספק כתובת URL תקינה.</p>
                </div>
            }
        </section>

        <!-- SECTION 3: Gallery -->
        <section class="section gallery-section" id="sec3">
            <div class="gallery-container">
                <!-- Swiper -->
                <div class="swiper mySwiper2">
                    <div class="swiper-wrapper" id="galleryWrapper">
                        <!-- Slides injected via JS -->
                    </div>
                </div>
                
                <!-- Floating Controls -->
                <div class="gallery-controls-floating">
                    <div class="gallery-categories">
                        @foreach (var cat in galleryCategories)
                        {
                            <button class="category-btn @(cat.Id == "Interior" ? "active" : "")" 
                                    onclick="loadGalleryCategory('@cat.Id', this)">
                                @cat.Label
                            </button>
                        }
                    </div>
                    
                    <div thumbsSlider="" class="swiper mySwiper gallery-thumbs-wrapper">
                        <div class="swiper-wrapper" id="thumbsWrapper">
                            <!-- Thumbs injected via JS -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION 4: Liked Apartments -->
        <section class="section liked-section" id="sec4">
            <div class="liked-content">
                <div class="liked-header">
                    <h2>האוסף שלך</h2>
                    <p>תוכניות ודירות ששמרת</p>
                </div>

                @if (likedItems.Any())
                {
                    <div class="liked-grid">
                        @foreach (var item in likedItems)
                        {
                            var title = !string.IsNullOrWhiteSpace(item.Title) ? item.Title : item.ApartmentId;
                            <div class="liked-card">
                                @if (!string.IsNullOrWhiteSpace(item.PlanImageUrl))
                                {
                                    <img src="@item.PlanImageUrl" class="card-image" loading="lazy" alt="@title" />
                                }
                                <div class="card-body">
                                    <div class="card-title">@title</div>
                                    <div class="card-meta">
                                        @if (item.Rooms.HasValue) { <span>@item.Rooms חדרים</span> }
                                        @if (item.SizeSqm.HasValue) { <span>@item.SizeSqm מ"ר</span> }
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(item.PdfUrl))
                                    {
                                        <a href="@item.PdfUrl" target="_blank" class="download-btn">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"/></svg>
                                            הורד תוכנית
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state" style="text-align: center; color: var(--text-secondary);">
                        <p>אין פריטים שמורים בסשן זה.</p>
                    </div>
                }
            </div>
        </section>

    </div>

    <script>
        window.galleryData = @Html.Raw(galleryJson);
    </script>
    <script src="~/js/view-session.js" asp-append-version="true"></script>
</body>
</html>
